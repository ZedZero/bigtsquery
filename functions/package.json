    "@phenomnomnominal/tsquery": "^1.0.1",
    "cors": "^2.8.4",
    "express": "^4.16.3",
    "firebase-admin": "~5.12.1",
    "firebase-functions": "^1.0.3",
    "typescript": "^2.8.3"
  },
  "devDependencies": {
    "jest": "^23.0.0",
    "ts-jest": "^22.4.6",
    "tslint": "^5.8.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "src/.+\\.spec\\.(jsx?|tsx?)$",
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json"]
  },
  "private": true
