{
  "compilerOptions": {
    "lib": ["es6"],
    "module": "commonjs",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "types": ["jest"],
    "target": "es6"
  },
  "compileOnSave": true,
  "include": ["src"]
}
